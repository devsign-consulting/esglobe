<html>
  <head>
  </head>
  <body onload='init()' onunload='finis()'>
    <h1>Virtual Balloon Flights</h1>
    <h2>Select parameters</h2>
    <p>
      Number of balloons = <select id="NF">
        <option>1</option>
        <option>5</option>
        <option selected>10</option>
        <option>15</option>
        <option>20</option>
      </select>

      Pressure level = <select id="press">
        <option>10</option>
        <option>30</option>
        <option>100</option>
        <option selected>250</option>
        <option>500</option>
        <option>850</option>
        <option>1000</option>
      </select>

      Spread = <select id="del">
        <option>0.01</option>
        <option>0.03</option>
        <option>0.1</option>
        <option>0.3</option>
        <option selected>1</option>
        <option>3</option>
        <option>10</option>
      </select>
    <p>

      <h2>Click at start point to launch</h2>
<p>
Lat <input type="text" id="m2lat"  name="lat" size=4 value="45"><br/>
Lon <input type="text" id="m2lon" name="lon" size=4 value="-80"><br/>
cmd <input type="text" id="cmd" name="cmd" size=60 value=""><br/>
</p>
<p>
  <button onclick='launch()'>Relaunch</button>
</p>
<p>
  <button onclick='t=0;ctx.drawImage(document.getElementById("progressbar"),0,0);
	  sph.show("tmp/frames/sphere-#.jpg")'>Replay</button>
</p>

</body>
</html>
