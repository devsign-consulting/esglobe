                    <a href="#" class="dropdown-toggle" {{#if module}}id="esmodule-{{module}}"{{/if}} data-toggle="dropdown">{{name}}</a>
                  </li>
                  {{/each}}
                </ul>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </div>
    </nav>
    <div id="esglobe-menu-frame"></div>

  </div>
</div>
