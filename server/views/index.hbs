<script>
  $(document).ready(function () {
    emitter.subscribe('esglobe:sphereClick', function(data) {
      console.log("emitter: esglobe:sphereClick", data);
      sph.plugins.drawLon(data.latlon)
    });

    emitter.subscribe('esglobe:mousePressed', function(data) {
      console.log("emitter: esglobe:mousePressed", data);
    });

    emitter.subscribe('esglobe:mouseDragged', function(data) {
      // console.log("emitter: esglobe:mouseDragged", data);
    });

    emitter.subscribe('esglobe:mouseReleased', function(data) {
      console.log("emitter: esglobe:mouseReleased", data);
    });
  });
</script>

{{includeModules menu}}

